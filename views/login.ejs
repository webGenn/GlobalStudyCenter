<body>

<!-- -----------------------------Registration Form------------------------- -->

<section id="CurriculumRegister">
    <div id="text_info_web" class="currWebInfo">
      <h1>Login Now</h1>
      <p>Enter Your Email, Password and Phone Number that you have used to register into our site
      </p>
    </div>

    <div class="contact_page">
      <form action="/login" method="POST" class="currInput">

        <input type="email" name="email" placeholder="Enter Email" autocomplete="off">

        <input type="password" name="password" placeholder="Enter Password" autocomplete="off">
        
        <input type="number" name="phone" placeholder="Mobile Number" autocomplete="off">

        <input type="submit" value="Login Now">
        <p id="checkAccount">Don't have an account <a href="/register">Register Now</a></p>
      </form>
    </div>
</section>

<!-- ------------------------------Footer------------------------- -->







    <script src="/javascripts/script.js"></script>
</body>
</html>